<p id="notice"><%= notice %></p>

<h1>Listing Photos</h1>
<% if user_signed_in? %>
<%= link_to 'New Photo', new_places_pic_path %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Place</th>
      <th>Image</th>
      <th>Submited by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places_pics.each do |places_pic| %>
      <tr>
        <td><%= places_pic.title %></td>
        <td><%= places_pic.body %></td>
          <td><%= link_to places_pic.place.title, places_pic.place %></td>
        <td><%= image_tag places_pic.image.url(:thumb) %></td>
        <td><%= places_pic.user.email %></td>
        <td><%= link_to 'Show', places_pic %></td>
        <% if user_signed_in? %>
          <% if current_user.email==places_pic.user.email %>
        <td><%= link_to 'Edit', edit_places_pic_path(places_pic) %></td>
        <td><%= link_to 'Destroy', places_pic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
